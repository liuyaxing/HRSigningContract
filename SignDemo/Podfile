platform :ios, '8.0'
use_frameworks!

target 'SignDemo' do
  pod 'HRLivingBodyDetection',:git=>'https://gitee.com/bizhanlu/HRLivingBodyDetection.git',:tag=>'1.0.0'
  #pod 'HRSigningContract' , :path => '../'
 pod 'HRSigningContract',:git=>'https://gitee.com/bizhanlu/HRSigningContract.git',:tag=>'1.2.3'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['ARCHS'] = "arm64 armv7"
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end


